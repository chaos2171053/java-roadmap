<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.ProductMapper">

    <resultMap id="productResultMap" type="org.example.model.Product">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="price" property="price"/>
        <result column="stock" property="stock"/>
    </resultMap>
    <update id="updateProductStock" parameterType="org.example.model.Product">
        update product
        set stock = #{stock}
        where id = #{id};
    </update>

    <select id="getAllProducts" resultMap="productResultMap">
        SELECT *
        FROM product
    </select>
    <select id="getProductById" parameterType="java.lang.Long" resultType="org.example.model.Product">
        select *
        FROM product
        where id = #{productId}
    </select>

</mapper>
